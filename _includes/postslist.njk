<ol reversed class="postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <div>
      <h3>
        <a href="{{ post.url | url }}" class="whitespace-nowrap postlist-link text-blue-600 visited:text-purple-600 mb-2">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
      </h3>
      <p>
        <time class="whitespace-nowrap postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
      </p>
      <p>{{ post.data.description }}
      </p>
    </div>
  </li>
{% endfor %}
</ol>
